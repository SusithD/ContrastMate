{
    "name": "contrast-mate",
    "version": "1.0.0",
    "type": "module",
    "description": "Professional WCAG contrast checker for Figma designs",
    "author": "Susith Deshan Alwis <iamsusithalwis@gmail.com> (https://github.com/SusithD)",
    "license": "MIT",
    "scripts": {
        "build:css": "postcss src/styles.css -o src/styles.processed.css",
        "build": "npm run build:css && build-figma-plugin --typecheck --minify",
        "watch": "build-figma-plugin --typecheck --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest run --coverage",
        "preinstall": "npx only-allow npm"
    },
    "figma-plugin": {
        "editorType": [
            "figma"
        ],
        "id": "contrast-mate-plugin",
        "name": "ContrastMate",
        "main": "src/main.ts",
        "ui": "src/ui.tsx",
        "menu": [
            {
                "name": "ContrastMate",
                "command": "open"
            }
        ],
        "relaunchButtons": {
            "open": {
                "name": "Open Auditor",
                "main": "src/main.ts",
                "ui": "src/ui.tsx"
            }
        },
        "permissions": [
            "currentuser"
        ],
        "networkAccess": {
            "allowedDomains": [
                "none"
            ]
        },
        "documentAccess": "dynamic-page"
    },
    "dependencies": {
        "culori": "^4.0.1",
        "preact": "^10.19.3"
    },
    "devDependencies": {
        "@create-figma-plugin/build": "^4.0.3",
        "@create-figma-plugin/tsconfig": "^4.0.3",
        "@create-figma-plugin/ui": "^4.0.3",
        "@create-figma-plugin/utilities": "^4.0.3",
        "@figma/plugin-typings": "^1.94.0",
        "@types/node": "^20.10.6",
        "@vitest/ui": "^4.0.17",
        "autoprefixer": "^10.4.16",
        "happy-dom": "^20.3.1",
        "postcss": "^8.4.33",
        "postcss-cli": "^11.0.1",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3",
        "vitest": "^4.0.17"
    }
}
